#!/bin/bash

# TODO: convert xwd output to jpg or so

SCREENSHOTS_TARGT_DIR="~/Pictures/"
# Modes for xwd
#MODE="-root"
MODE=""

cd ${SCREENSHOTS_TARGT_DIR}

FILE_NAME="Screenshot$(date +"%Y%m%d%H%M")"
FILE_NAME="${FILE_NAME}.xwd"

/usr/bin/xwd ${MODE} -out "${FILE_NAME}"

export msg1="Screenshot done. File: "
export msg2="~/Pictures/${FILE_NAME}"

echo ${msg1} ${msg2}

echo "${msg2}" > ~/screenshot.filename.log

gimp ${FILE_NAME}
